<html>

<body>
  <div>
    <%= link_to 'Back', :back, :class => 'link' %>
    <%= link_to 'Home', root_path, :class => 'link' %>
    <h1 style="text-align:center">Search results for '<%= @query %>'</h1>
    <ul>
      <table>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Brand</th>
          <th>Category</th>
          <th>No. of Variant(s)</th>
          <th></th>
        </tr>
        <% @results.each do |product| %>
        <tr>
            <td><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.brand.name %></td>
            <td><%= product.category.name %></td>
            <td><%= product.variants.count %></td>
            <td><%= link_to 'Show Product', product_path(product), :class => 'link' %></td>
          </td>
        </tr>
        <% end %>
      </table>

    </ul>
  </div>
</body>

</html>