<html>

<body>
  <h1 style="text-align:center"><%= @product.title %> Variants</h1>
  <div style="text-align: center; display: flex; justify-content: center">
    <%= link_to "Back to #{@product.brand.name} Product(s)", brand_products_path(@product.brand_id), :class => 'link' %>
    <%= link_to 'Home', root_path, :class => 'link' %>
    <a href='<%= new_product_variant_path %> ' class="link">New Variant</a>
    <%= form_tag(search_path, :method => 'get', :class => 'search-form') do %>
    <%= search_field_tag :search, params[:search], placeholder:'' %>
    <%= button_tag 'Search', :name => nil, :class => 'link' %>
    <% end %>
  </div>
  <ul><br>
    <table>
      <tr>
        <th>Name</th>
        <th>Inventory</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
      <% @product.variants.each do |variant| %>
        <tr style="margin:5px 0px">
          <td><%= variant.name %></td>
          <td><%= variant.inventory %></td>
          <td><%= variant.price %></td>
          <td><a href='<%= edit_product_variant_path(variant.product_id, variant.id) %>' class="link">Update</a>
          <%= link_to "Delete", product_variant_path(@product.id, variant.id), method: :delete, data: {confirm: 'Delete?'}, :class => "link" %></td>
        </tr>
      <% end %>
    </table>
  </ul>
</body>

</html>