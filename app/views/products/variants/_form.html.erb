<html>

<body>
  <div>
    <div class='form'>
      <%= form_for @variant, :url => product_variants_path(product_id: @product.id) do |form| %>
      <table class='form-table'>
          <tr><td><%= form.text_field :name, placeholder: 'Name' %></tr></td>
          <tr><td><%= form.text_field :product_id, :value => @product.title, disabled: true %></tr></td>
          <tr><td><%= form.number_field :inventory, min: 1, placeholder: 'Inventory' %></tr></td>
          <tr><td><%= form.number_field :price, placeholder: 'Price' %></tr></td>
          <tr><td><%= form.submit :class => 'submit' %></tr></td>
        </table>
      <% end %>
    </div>
  </div>

</body>

</html>